<Context>
    <Resource
            name="jdbc/GarageDB"
            auth="Container"
            type="javax.sql.DataSource"
            factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
            driverClassName="com.mysql.cj.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/garage_mgmt?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=Asia/Bangkok&amp;useUnicode=true&amp;charset=UTF-8"
            username="root"
            password="admin"
            initialSize="5"
            maxActive="30"
            maxIdle="10"
            minIdle="5"
            maxWait="10000"
            testOnBorrow="true"
            validationQuery="SELECT 1"/>
</Context>
